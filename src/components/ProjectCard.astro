---
export interface Props {
    title: string;
    description: string;
    tags: string[];
    github?: string;
    link?: string;
}

const { title, description, tags, github, link } = Astro.props;
---

<div class="colorful-card p-6 flex flex-col h-full">
    <h3 class="font-bold text-lg text-primary mb-2">{title}</h3>
    <p class="text-sm text-secondary leading-relaxed flex-grow">{description}</p>
    <ul class="mt-4 flex flex-wrap gap-2" aria-label="Technologies used">
        {tags.map(tag => (
            <li class="flex items-center rounded-full bg-primary/10 px-3 py-1 text-xs font-medium leading-5 text-accent">
                {tag}
            </li>
        ))}
    </ul>
    <div class="mt-5 pt-4 border-t border-secondary flex items-center gap-4">
        {github && <a href={github} target="_blank" rel="noreferrer" class="text-sm text-secondary hover:text-accent transition-colors">GitHub →</a>}
        {link && <a href={link} target="_blank" rel="noreferrer" class="text-sm text-secondary hover:text-accent transition-colors">Demo →</a>}
    </div>
</div>
