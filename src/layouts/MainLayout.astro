---
// Importaciones globales y configuraci√≥n del layout.
import "../styles/global.css";

// Props que el layout puede recibir.
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Oscar Sinuco - Fullstack Developer",
  description = "Portafolio de Oscar Sinuco, desarrollador experto en Astro, Angular, React y GenAI.",
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-black">
    <header
      class="sticky top-0 z-40 w-full flex-none bg-black/30 backdrop-blur-sm transition-colors duration-500"
    >
      <nav class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <a class="text-2xl font-bold text-primary" href="/">OS</a>
          <ul class="hidden md:flex items-center space-x-8 text-sm font-medium text-primary">
            <li><a class="hover:text-secondary transition-colors" href="#experience">Experiencia</a></li>
            <li><a class="hover:text-secondary transition-colors" href="#projects">Proyectos</a></li>
            <li><a class="hover:text-secondary transition-colors" href="#skills">Habilidades</a></li>
            <li>
              <a href="#contact" class="px-4 py-2 text-sm font-semibold text-black bg-primary/10 rounded-md hover:bg-primary/20 transition-all">
                Contacto
              </a>
            </li>
            <li>
              <button id="theme-toggle" class="text-xl">üåô</button>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
      <slot />
    </main>

    <footer class="mt-12 md:mt-24 pb-8 text-center text-secondary/50 text-sm">
      <p>Dise√±ado y construido por Oscar Sinuco.</p>
    </footer>

    <script>
      const themeToggle = document.getElementById('theme-toggle') as HTMLButtonElement;
      const html = document.documentElement;

      if (themeToggle) {
        // Check for saved theme preference or default to dark
        const currentTheme = localStorage.getItem('theme') || 'dark';
        html.setAttribute('data-theme', currentTheme);
        themeToggle.textContent = currentTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';

        themeToggle.addEventListener('click', () => {
          const newTheme = html.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
          html.setAttribute('data-theme', newTheme);
          localStorage.setItem('theme', newTheme);
          themeToggle.textContent = newTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
        });
      }
    </script>
  </body>
</html>
